<!-- src/main/resources/mapper/UserMapper.xml -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="resource.MemberMapper">
    <select id="selectMemberById" parameterType="com.ssafy.living_spot.member.dto.MemberIdParam" resultType="com.ssafy.living_spot.member.dto.MemberInfo">
        SELECT
            member_id,
            member_name,
            member_email
        FROM
            member
        WHERE
            member_id = #{memberId}
    </select>
</mapper>
